package constructorBasic1;

 public class Tv {
	//필드
	boolean power;
	int ch;
	int vol;
	String color;
	String brand;
	
	//메소드
	//전원 키고 끌수있는 메소드
	//메소드명 : powerOnOff
	//리턴값x, 매개변수x
	//전원이 꺼져있으니 켜주고 켜져있을 때 꺼주기
	 void powerOnOff() {
		 power = !power;
		 System.out.println("전원 상태: " + (power ? "켜짐" : "꺼짐"));
	}
	
	//볼륨 올리고 내릴 수 있는 메소드
	//메소드명 : increaseVolume(), decreaseVolume()
	 void increaseVolume() {
		 if(power) {
			 System.out.println("현재 볼륨 : " + vol);
			   if(vol >= 0 && vol <= 99){
			 vol++;
			   }
			 System.out.println("올린 후 현재 볼륨 : " + vol);
		 }else {
			 System.out.println("전원을 먼저 켜주세요");
		 }
	 }
	
	//채널 올리고 내릴 수 있는 메소드
	//메소드명 : nextChannel(), previousChannel()
	 
	 void nextChannel() {
			if(power) {
				System.out.println("현재 채널 : " + ch);
				ch++;
				System.out.println("");
			}
		}
}

public class Tv{
	public static void main(String[] args) {
		Tv myTv1 = new Tv();
		Tv myTv2 = new Tv();
		
		//필드 초기화
		myTv1.brand = "LG";
		myTv1.color = "black";
	
	}
}
