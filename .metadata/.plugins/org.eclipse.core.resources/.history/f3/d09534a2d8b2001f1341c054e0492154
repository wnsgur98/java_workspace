package constructorThis2;

public class Person {
	//필드
	String name;
	int age;
	
	//생성자
	//기본생성자
	public Person() {
	}

	
	//모든 필드의 매개변수를 받는 생성자
public Person(String name, int age) {
	this.name = name;
	this.age = age;
}
	
	//메소드
	//printInfo()정보출력
	void printInfo() {
		System.out.println("이름 : " + this.name + ", 나이 : " + this.age);
	}
	
	//greet() 이름 님 안녕하세요 출력
	void greet() {
		System.out.println(this.name + "님 안녕하세요");
	}
}
